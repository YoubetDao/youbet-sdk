{
  "name": "youbet-sdk",
  "version": "0.0.1",
  "description": "You bet! Awesome SDK it it.",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "clean": "rm -rf dist build package",
